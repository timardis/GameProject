<div class='container'>
<div class='jumbotron'>

<h1> VC 2.0 </h1><h2>a modified version of the card game VC</h2>

<canvas id='gameCanvas' width='1024' height='576'>
</canvas>

<div width="300" id="login-page">
<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Username</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="" class="input-xlarge">
    
  </div>
</div>

<!-- Button -->
<div class="control-group">
  <label class="control-label" for="playButton"></label>
  <div class="controls">
    <button id="playButton" name="playButton" onclick="joinTable()" class="btn btn-primary">Play!</button>
  </div>
</div>
</div>
<script>
$("#gameCanvas").hide();
$( "#playButton" ).click(function() {
  $( "#login-page" ).hide( "slow", function() {
  	$("#gameCanvas").show("slow", function() {
  		init()
  	});
  });
});
</script>

</div>
</div>

<script>
function joinTable() {
	socket.get('/main/newPlayer', { name: 'Tictuong' }, function (response) {
		console.log(response);
	});
}
</script>
